@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model PMTS.Models.User

@{
    ViewData["Title"] = "Administratoriaus registracija";
}

<h1>Administratoriaus registracija</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Vardas</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">El. Paštas</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Slaptažodis</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registruotis" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


    @if (TempData["RegisterStatus"] == "RegisterSuccess")
    {
        <h2>Administratoriaus paskyra sukurta</h2>
    }



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
