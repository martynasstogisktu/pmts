@model PMTS.Models.User

@{
    ViewData["Title"] = "Naudotojo informacija";
}

<div>
    <h4>Naudotojo informacija</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Vardas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            El. paštas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
</div>
<div>
    @if (TempData["IsAdmin"] == "true")
    {
        <p><b>Naudotojas yra administratorius</b></p>
        @if (TempData["RegisterEnabled"] != null)
        {
            @if (TempData["RegisterEnabled"].Equals("true"))
            {
                <p><b>Registracija įjungta</b></p>
                <input type="button" value="Išjungti registraciją" class="btn btn-primary" onclick="window.location.href='@Url.Action("ChangeRegistration")';" />
            }
            @if (TempData["RegisterEnabled"].Equals("false"))
            {
                <p><b>Registracija išjungta</b></p>
                <input type="button" value="Įjungti registraciją" class="btn btn-primary" onclick="window.location.href='@Url.Action("ChangeRegistration")';" />
            }
        }
        else
        {
            <p><b>Registracija išjungta</b></p>
            <input type="button" value="Įjungti registraciją" class="btn btn-primary" onclick="window.location.href='@Url.Action("ChangeRegistration")';" />
        }

    }
    @if (TempData["IsAdmin"] == "false")
    {
        <dl class="row">
            <dt class="col-sm-2">
                Turnyrų, kuriuose dalyvauta, skaičius
            </dt>
            <dd class="col-sm-10">
                @TempData["TournamentN"]
            </dd>
            <dt class="col-sm-2">
                Pirmų vietų skaičius
            </dt>
            <dd class="col-sm-10">
                @TempData["Firsts"]
            </dd>
            <dt class="col-sm-2">
                Vidutinė pozicija
            </dt>
            <dd class="col-sm-10">
                @TempData["AvgPlace"]
            </dd>
        </dl>
        <a asp-controller="Tournaments" asp-action="MyTournaments">Mano turnyrai</a>
        <br />
    }
    <input type="button" value="Keisti slaptažodį" class="btn btn-primary" onclick="window.location.href='@Url.Action("ChangePassword")';" />
    
</div>
